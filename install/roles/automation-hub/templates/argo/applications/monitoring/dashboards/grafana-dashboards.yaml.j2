apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: grafana-dashboards
  labels:
    project: skodjob
    app: strimzi
spec:
  project: monitoring
  source:
    repoURL: https://github.com/skodjob/deployment-hub
    targetRevision: {{ deployment_hub_branch }}
    path: metrics/grafana/dashboards
    directory:
      recurse: true
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=false
  destination:
    name: {{ cluster }}
    namespace: {{ infra_monitoring_namespace }}
