apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: strimzi-alerts-cluster-operator-kraft-{{ cluster }}
  labels:
    project: skodjob
    app: strimzi
spec:
  project: monitoring
  source:
    repoURL: https://github.com/skodjob/deployment-hub
    targetRevision: {{ deployment_hub_branch }}
    path: metrics/alerts/strimzi-operator
    directory:
      recurse: true
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=false
    managedNamespaceMetadata:
      labels:
        project: skodjob
  destination:
    name: {{ cluster }}
    namespace: strimzi-operator-kraft
