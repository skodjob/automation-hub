apiVersion: v1
kind: Secret
metadata:
  name: alertmanager-main
  namespace: openshift-monitoring
  labels:
    project: tealc
type: Opaque
stringData:
  alertmanager.yaml: |
    global:
      resolve_timeout: 10m

    route:
      group_by: ['alertname']
      group_wait: 1m
      group_interval: 5m
      repeat_interval: 24h
      receiver: 'default_blackhole'
      routes:
        - receiver: email
          match:
            app: tealc

    receivers:
    - name: 'default_blackhole'
    - name: 'email'
      email_configs:
      - to: '{{ smtp_email }}'
        from: '{{ smtp_email }}'
        headers:
          subject: '[{{ clusterName }}] {% raw %}[{{ .Status | toUpper }}{{ if eq .Status "firing" }}:{{ .Alerts.Firing | len }}{{ end }}] {{ .GroupLabels.SortedPairs.Values | join " " }}{% endraw %}'
        smarthost: {{ smtp_server }}
        require_tls: true
        auth_username: {{ smtp_username }}
        auth_password: {{ smtp_password }}
        send_resolved: true