apiVersion: v1
kind: Secret
metadata:
  name: {{ worker.name }}-argo-access
  labels:
    argocd.argoproj.io/secret-type: cluster
    app: tealc
    project: tealc
    environment: {{ worker.env }}
    name: {{ worker.name }}
    workload: {{ worker.workload }}
type: Opaque
stringData:
  name: {{ worker.name }}
  server: {{ worker.api_url }}
  config: |
    {
      "bearerToken": "{{ access_token }}",
      "tlsClientConfig": {
        "insecure": true
      }
    }
