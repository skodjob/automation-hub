---
apiVersion: logging.openshift.io/v1
kind: ClusterLogging
metadata:
  name: instance
  namespace: openshift-logging
spec:
  collection:
    type: vector
    tolerations:
      - effect: NoSchedule
        key: nodetype
        value: kafka
      - effect: NoSchedule
        key: nodetype
        value: monitoring
      - effect: NoSchedule
        key: nodetype
        value: observability
  logStore:
    lokistack:
      name: logging-loki
    type: lokistack
  managementState: Managed



