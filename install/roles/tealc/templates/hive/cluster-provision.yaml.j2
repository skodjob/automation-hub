apiVersion: hive.openshift.io/v1
kind: ClusterImageSet
metadata:
  name: {{ cluster_name }}-imageset
spec:
  releaseImage: quay.io/openshift-release-dev/ocp-release:{{ ocp_version }}-x86_64
---
apiVersion: hive.openshift.io/v1
kind: ClusterDeployment
metadata:
  name: {{ cluster_name }}
  namespace: {{ hive_namespace }}
spec:
  baseDomain: {{ cluster_domain }}
  clusterName: {{ cluster_name }}
  platform:
    openstack:
      cloud: {{ cloud }}
      credentialsSecretRef:
        name: {{ openstack_clouds_yaml }}
  provisioning:
    installConfigSecretRef:
      name: {{ install_config_name }}
    sshPrivateKeySecretRef:
      name: {{ kafka_ssh_secret_name }}
    imageSetRef:
      name: {{ cluster_name }}-imageset
  pullSecretRef:
    name: {{ openshift_pull_secret_name }}
